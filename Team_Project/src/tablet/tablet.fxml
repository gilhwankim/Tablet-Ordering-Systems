<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane prefHeight="760.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tablet.TabletController">
   <center>
      <TabPane fx:id="tp" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            
         </tabs>
      </TabPane>
   </center>
   <right>
      <VBox fx:id="vbox" alignment="TOP_CENTER" prefWidth="280.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="108.0" text="주문서">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="tMenuName" prefWidth="149.0" text="메뉴명" />
                  <TableColumn fx:id="tMenuNum" prefWidth="39.0" text="수량" />
                  <TableColumn fx:id="tMenuPrice" prefWidth="81.0" text="가격" />
               </columns>
            </TableView>
            <HBox alignment="TOP_RIGHT" prefHeight="30.0" spacing="5.0">
               <children>
                  <Button fx:id="subtractBtn" mnemonicParsing="false" text="-" />
                  <Button fx:id="plusBtn" mnemonicParsing="false" text="+" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="30.0" spacing="10.0">
               <children>
                  <Label text="합계" />
                  <Label fx:id="total" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefWidth="120.0" text="Label">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="orderBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="270.0" text="주문하기" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <BorderPane prefHeight="50.0" BorderPane.alignment="CENTER">
         <left>
            <Label fx:id="tableNo" text="01" BorderPane.alignment="CENTER">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </left>
         <right>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="billBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="130.0" text="계산서" />
                  <Button fx:id="callBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="130.0" text="직원호출" />
               </children>
            </HBox>
         </right>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </BorderPane>
   </bottom>
</BorderPane>
